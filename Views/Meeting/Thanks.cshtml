@model UserInfo
<main class="text-center">
	<h1 class="h4">Başvuru Durumu</h1>

	@if (Model.WillAttend == true)
	{
		<p>Teşekkürler @Model.Name, toplantıya sizinle birlikte @ViewBag.UserCount kişi katılıyor.</p>
		<a href="/Meeting/List" class="btn btn-sm btn-primary">Katılımcıları Listele</a>
	}
	else
	{
		<p>@Model.Name, katılmadığından dolayı üzgünüz</p>
		<a href="/meeting/apply" class="btn btn-sm btn-primary">Başvuru Formu</a>
	}

	
</main>
