@model List<UserInfo>
<main class="text-center">
	<h1 class="h4"> Toplantıya katılım listesi</h1>

	<table class="table table-bordered">
		<thead>
			<tr>
				<td>Ad</td>
				<td>Katılım durumu</td>
				<td></td>
			</tr>
		</thead>
		<tbody>
			@{
				int i = 0;
			}

			@foreach(var user in Model)
			{
				var durum = user.WillAttend == true ? "Evet" : "Hayır";
				var className = user.WillAttend == true ? "table-success" : "table-danger";

				if (user.WillAttend == true)
				{
					i++;
				}

				<tr class="@className">
					<td>@user.Name</td>
					<td>@durum</td>
					<td>
						<a href="/Meeting/Details/@user.Id" class="btn btn-sm btn-primary">Detay</a>
					</td>
				</tr>
			}
		</tbody>
	</table>
	<div class="card">
		<div class="card-body">
			<p>Katılımcı Sayısı: @i</p>
		</div>
	</div>

</main>

